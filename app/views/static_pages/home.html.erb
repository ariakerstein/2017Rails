<% if signed_in? %>
  <div class="row">
    <aside class="span4">
    <div class="jumbotron">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
    <div class="span8">
        <%= render 'shared/micropost_form' %>
    </div>
    </aside>
    <div class="span4 pull-right">

      <h3>Flowblocks Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Distraqt</h1>

    <h2>
      Find your flow
      <a href="http://railstutorial.org/"></a>
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary pull-right" %>
  </div>

<% end %> 